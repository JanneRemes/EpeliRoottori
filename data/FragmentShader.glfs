#version 330 core
#define EPS 0.001

in vec3 vertexColor;
in vec2 texCoord;

out vec4 color; // Output data
//uniform vec4 ourColor;

uniform sampler2D myTextureSampler; // Texture data
uniform sampler2D myTextureSampler2;

void main()
{
color = mix(texture(myTextureSampler, texCoord), texture(myTextureSampler2, texCoord), 0.5) + vec4(vertexColor, 1.0f);
}